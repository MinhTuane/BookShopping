@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
}

<div style="width:90%;margin:auto">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {


        <h3>My Cart</h3>

        <table class="table table-bordered">
            <tr>
                <th>Book</th>
                <th>Image</th>
                <th>Genre</th>
                <th>Unit Price(Vnd)</th>
                <th>Total Price</th>
            </tr>
            @foreach (var item in Model.CartDetails)
            {
                <tr>
                    <td>@item.Book.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Book.Image))
                        {
                            <img src="/images/noImage.jpg" style="width:80px"height="100px"/>
                        }
                        else
                        {
                            <img src="@item.Book.Image" style="width:80px" height="100px" />
                        }
                    </td>
                    <td>@item.Book.GenreName</td>
                    <td>@item.Book.Price x @item.Quantity</td>
                    <td>@(item.Book.Price * item.Quantity)</td>
                    <td>
                        <a class="btn btn-info" href="/Cart/AddItem?bookId"="@item.BookId&&redirect=1">+</a>
                        <a class="btn btn-info" href="/Cart/removeItem?bookId=@item.BookId">-</a>
                    </td>
                </tr>
            }
        </table>
        <div class="my-2">
            <h5>Total(Vnd) : </h5>@(Model.CartDetails.Select(item=>item.Book.Price*item.Quantity).Sum())
        </div>
        <div class="my-2">
            <a class="btn btn-outline-primary" href="/cart/Checkout">Checkout</a>
        </div>
    }
    else
    {
        <h5>Cart is Empty</h5>
    }
</div>

